<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:layout_marginBottom="10dp">

	<ImageView
		android:id="@+id/rv_row_product_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_margin="10dp"/>
	<TextView
		android:id="@+id/rv_row_product_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="id"
		android:layout_marginLeft="10dp"
		android:textSize="30sp"
		android:layout_toRightOf="@+id/rv_row_product_image"
		android:layout_toEndOf="@+id/rv_row_product_image"/>
	<TextView
		android:id="@+id/rv_row_product_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Name"
		android:layout_marginLeft="10dp"
		android:textSize="30sp"
		android:layout_toRightOf="@+id/rv_row_product_image"
		android:layout_toEndOf="@+id/rv_row_product_image"
		android:layout_below="@id/rv_row_product_id"/>
	<TextView
		android:id="@+id/rv_row_product_price"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Price"
		android:layout_marginLeft="10dp"
		android:textSize="30sp"
		android:layout_toRightOf="@+id/rv_row_product_image"
		android:layout_toEndOf="@+id/rv_row_product_image"
		android:layout_below="@id/rv_row_product_name"/>
</RelativeLayout>